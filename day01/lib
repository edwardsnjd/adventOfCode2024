#! /usr/bin/env bash

function part1() {
   local inputPath="${1:-input.txt}"

   paste \
      <(cut -d' ' -f1 "$inputPath" | sort) \
      <(cut -d' ' -f4 "$inputPath" | sort) \
   | awk '
      function abs(x) { return x < 0 ? x * -1 : x }
      { print abs($1 - $2) }
   ' \
   | sumList
}

function part2() {
   local inputPath="${1:-input.txt}"

   join \
      <(cut -d' ' -f1 "$inputPath" | sort) \
      <(cut -d' ' -f4 "$inputPath" | sort | uniq -c | awk '{ print $2, $1}') \
   | awk '{ print $1 * $2 }' \
   | sumList
}

function sumList() {
   awk '{ total += $1 } END { print total }'
}
